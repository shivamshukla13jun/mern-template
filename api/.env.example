# Environment Configuration for E-commerce API

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
PORT_STAGING=3001
PORT_PRODUCTION=3002

# Database Configuration
MONGO_URI=mongodb://localhost:27017/ecommerce
MONGO_URI_STAGING=mongodb://localhost:27017/ecommerce_staging
MONGO_URI_PRODUCTION=mongodb://localhost:27017/ecommerce_production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-in-production
JWT_EXPIRE=1h

# Frontend URL Configuration
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_STAGING=https://staging.yourdomain.com
FRONTEND_URL_PRODUCTION=https://yourdomain.com

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_URL=
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Payment Gateway Configuration (example for Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration (example)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-change-this-in-production

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/combined.log

# Development URLs
DEVELOPMENTURL=http://localhost:3000
PRODUCTIONURL=https://api.yourdomain.com
